generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())  // UUID를 기본 키로 사용
  name      String  
  userId     String  @unique
  password  String  // 해시된 비밀번호 저장
  createdAt DateTime @default(now()) // 계정 생성 시간
}